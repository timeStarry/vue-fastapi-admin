# 应用配置
APP_TITLE="Vue FastAPI Admin"
PROJECT_NAME="Vue FastAPI Admin"
APP_DESCRIPTION="现代化的前后端分离管理系统"
DEBUG=True

# 安全配置
SECRET_KEY="your-secret-key-here"  # 使用 openssl rand -hex 32 生成
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天 = 60 * 24 * 7

# 数据库配置 - PostgreSQL
DB_ENGINE="tortoise.backends.asyncpg"
DB_HOST="localhost"
DB_PORT=5432
DB_USER="your_username"
DB_PASSWORD="your_password"
DB_NAME="vue_fastapi_admin"

# 数据库配置 - MySQL
# DB_ENGINE="tortoise.backends.mysql"
# DB_HOST="localhost"
# DB_PORT=3306
# DB_USER="root"
# DB_PASSWORD="your_password"
# DB_NAME="vue_fastapi_admin"

# Redis配置（如果需要）
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# 跨域配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# 时区配置
TIMEZONE="Asia/Shanghai"
DATETIME_FORMAT="%Y-%m-%d %H:%M:%S"

# 日志配置
LOG_LEVEL="INFO"
LOGS_ROOT="app/logs"